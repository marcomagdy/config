[user]
	name = Marco Magdy
	email = mmagdy@gmail.com
[color]
    ui = auto
[color "branch"]
    current   = bold white red
    local     = bold yellow
    remote    = bold magenta
    upstream  = bold cyan
[color "status"]
  # staged changes
    added     = bold green
    updated   = bold white green
  # un-staged changes
    changed   = bold yellow
    untracked = bold cyan
    nobranch  = bold red white
[core]
    pager = less -FMRiX
    editor = vim
    ignorecase = false
[push]
    default = simple
[alias]
    dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
    ls  = log --graph --pretty=format:'%C(yellow)%h%C(bold white red)%d%Creset %s %C(bold green)%cr %Creset%C(white)%an' --abbrev-commit --date=relative
    co  = checkout
    br  = branch
    ss  = status -s
    cc  = commit -v
    ca  = commit --amend
    ce  = commit --amend --no-edit
    cf  = commit --fixup
[diff]
    tool = bc3
[merge]
	tool = vimdiff
    conflictstyle = diff3
[github]
    user = marcomagdy
[include]
    path = ~/.gitconfig.local
[mergetool "bc3"]
	trustExitCode = true
